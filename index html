        "‡§ï‡§æ‡§∞‡•ç‡§Ø‡§ï‡•ç‡§∞‡§Æ‡§æ‡§ö‡•Ä ‡§â‡§∞‡•ç‡§ú‡§æ ‡§Ü‡§£‡§ø ‡§Ü‡§®‡§Ç‡§¶ ‡§§‡•ç‡§Ø‡§æ‡§Ç‡§®‡•Ä ‡§µ‡§æ‡§¢‡§µ‡§≤‡§æ.",
        "‡§∏‡§Ç‡§¨‡§Ç‡§ß‡§ø‡§§ ‡§∏‡§Ç‡§µ‡§æ‡§¶ ‡§ï‡•å‡§∂‡§≤‡•ç‡§Ø ‡§Ü‡§£‡§ø ‡§µ‡•á‡§≥‡•á‡§ö‡•á ‡§™‡§æ‡§≤‡§® ‡§â‡§§‡•ç‡§ï‡•É‡§∑‡•ç‡§ü.",
        "‡§∏‡§∞‡•ç‡§µ‡§æ‡§Ç‡§®‡§æ‡§ö ‡§Ü‡§µ‡§°‡§≤‡•á‡§≤‡•Ä ‡§∏‡§æ‡§¶‡§∞‡•Ä‡§ï‡§∞‡§£ ‡§∂‡•à‡§≤‡•Ä."
      ];
      const out = [];
      for(let i=0;i<REVIEWS_COUNT;i++){
        const idx = i % base.length;
        const suffix = (i>=base.length) ? ` (${i+1})` : '';
        out.push(base[idx] + suffix);
      }
      return out;
    }

    // populate on load
    const english = generateEnglishTemplates();
    const hindi = generateHindiTemplates();
    const marathi = generateMarathiTemplates();

    function renderReviews(list, containerId){
      const container = document.getElementById(containerId);
      container.innerHTML = '';
      list.forEach((text, i) => {
        const card = document.createElement('article');
        card.className = 'card';
        card.innerHTML = `<p>${text}</p><button class="btn" data-index="${i}" onclick="copyAndRedirect(this,'${containerId.split('-')[0]}')">Copy & Post Review</button>`;
        container.appendChild(card);
      });
    }

    renderReviews(english, 'english-reviews');
    renderReviews(hindi, 'hindi-reviews');
    renderReviews(marathi, 'marathi-reviews');

    // TAB logic
    const tabs = document.querySelectorAll('.tab');
    tabs.forEach(t => {
      t.addEventListener('click', e => {
        const id = t.id.replace('tab-','');
        // set active styles
        tabs.forEach(x=>x.classList.add('inactive'));
        t.classList.remove('inactive');
        // show sections
        document.querySelectorAll('.lang-section').forEach(s=>s.style.display='none');
        document.getElementById(id).style.display = 'block';
        // quick focus top of content
        window.scrollTo({top:130,behavior:'auto'});
      });
      t.addEventListener('keydown', ev => { if(ev.key==='Enter'||ev.key===' ') t.click(); });
    });

    // COPY & REDIRECT logic
    function copyAndRedirect(button, lang){
      const text = button.previousElementSibling.innerText;
      navigator.clipboard.writeText(text).then(()=>{
        showPopup('popup',true);
        setTimeout(()=>{
          showPopup('popup',false);
          showThankYou(lang);
          setTimeout(()=>{
            // redirect to Google Review
            window.location.href = GOOGLE_REVIEW_LINK;
          },1800);
        },1200);
      }).catch(()=>{
        alert('Unable to copy automatically ‚Äî please long-press the text and copy it manually.');
      });
    }

    function showPopup(id, show){
      const el = document.getElementById(id);
      if(show){
        el.style.display='block';
        el.setAttribute('aria-hidden','false');
      } else {
        el.style.display='none';
        el.setAttribute('aria-hidden','true');
      }
    }

    function showThankYou(lang){
      const t = document.getElementById('thankyou');
      const messages = {
        english: 'üôè Thank you for reviewing Anchor Vipul Ranaware!',
        hindi: 'üôè ‡§è‡§Ç‡§ï‡§∞ ‡§µ‡§ø‡§™‡•Å‡§≤ ‡§∞‡§®‡§µ‡§∞‡•á ‡§ï‡•Ä ‡§∏‡§Æ‡•Ä‡§ï‡•ç‡§∑‡§æ ‡§ï‡§∞‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è ‡§ß‡§®‡•ç‡§Ø‡§µ‡§æ‡§¶!',
        marathi: 'üôè ‡§Ö‡§Å‡§ï‡§∞ ‡§µ‡§ø‡§™‡•Å‡§≤ ‡§∞‡§®‡§µ‡§∞‡•á ‡§Ø‡§æ‡§Ç‡§ö‡§æ ‡§Ö‡§≠‡§ø‡§™‡•ç‡§∞‡§æ‡§Ø ‡§¶‡§ø‡§≤‡•ç‡§Ø‡§æ‡§¨‡§¶‡•ç‡§¶‡§≤ ‡§ß‡§®‡•ç‡§Ø‡§µ‡§æ‡§¶!'
      };
      t.innerText = messages[lang] || messages.english;
      t.style.display='block';
      setTimeout(()=>{ t.style.display='none'; },1600);
    }

    // Back to top
    const backBtn = document.getElementById('backToTop');
    window.addEventListener('scroll', ()=>{
      if(window.scrollY > 450) backBtn.style.display='block'; else backBtn.style.display='none';
    });
    backBtn.addEventListener('click', ()=> window.scrollTo({top:120,behavior:'smooth'}));

    // fast scroll feel: add small helper to jump to content when tab clicked
    document.getElementById('tab-english').addEventListener('click', ()=>window.scrollTo({top:130,behavior:'auto'}));

    // initial tab setup: set english active, others inactive
    document.getElementById('tab-english').classList.remove('inactive');
    document.getElementById('tab-hindi').classList.add('inactive');
    document.getElementById('tab-marathi').classList.add('inactive');

  </script>
</body>
</html>
